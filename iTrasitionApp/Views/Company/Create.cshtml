@{
    ViewData["Title"] = "Создание компании";
}
@model iTrasitionApp.ViewModel.CreateCompanyModel

<h2>CreateCompany</h2>
<form method="post" asp-controller="Company" asp-action="Create">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label>Автор</label>
        <input class="form-control" readonly placeholder="@User.Identity.Name" />
    </div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea class="form-control" asp-for="Description" rows="4"></textarea>
        <span asp-validation-for="Description"></span>
    </div>
    <div class="form-group">
        <label asp-for="Goal"></label>
        <input class="form-control" asp-for="Goal" />
        <span asp-validation-for="Goal"></span>
    </div>
    <input type="submit" value="Создать" />
</form>
