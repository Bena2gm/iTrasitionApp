@{
    ViewData["Title"] = "Редактирование компании";
}
@model iTrasitionApp.ViewModel.CreateCompanyModel

<h2>CreateCompany</h2>
<form method="post" asp-controller="Company" asp-action="Edit">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label>Автор</label>
        <input class="form-control" readonly placeholder="@User.Identity.Name" />
    </div>
    <div class="form-group">
        <label>Название</label>
        <input class="form-control" asp-for="Name" value="@Model.Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label>Суть</label>
        <textarea class="form-control" asp-for="Description" rows="4">@Model.Description</textarea>
        <span asp-validation-for="Description"></span>
    </div>
    <div class="form-group">
        <label>Цель</label>
        <input class="form-control" asp-for="Goal" />
        <span asp-validation-for="Goal"></span>
    </div>
    <input type="submit" value="Сохранить" />
</form>
